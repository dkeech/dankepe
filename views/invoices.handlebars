<div class="container">
    <h1>Orders</h1>
    <table>
        <tr>
          <th colspan="2" style="color: red";>search by date or customer field</th>
          <td>&nbsp;</td>
        </tr>

    {{#each invoices}}
        <tr >
          <th>Order #</th>
          <th>Name</th>
          <th>Total</th>
        </tr>
        <tr>
          <td>{{orderid}}</td>
          <td  style="white-space: nowrap;">{{firstname}} {{lastname}} </td>
          <td  class="money">{{price}}</td>
          
          <td><button type="submit" class="btn btn-primary">Delete</button></td>
          <!-- Button trigger modal -->
<td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#orderModal">
 View Order
</button></td>

<!-- Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="orderModalLabel">#123 Jerry Jerrson</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>{{modelyear}} {{brandname}} {{model}} {{price}}</p>
        <p>Tax: <script>document.write(({{price}} * .09).toFixed(2))</script></p>
        <p>Total: <script>document.write(({{price}} + {{price}} * .09).toFixed(2))</script></p>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        
      </div>
    </div>
  </div>
</div>
