<div class="container">
  <h1>Add a Product</h1>
<form class="row" action="/products" method="POST">
  <div class="form-group col-sm-6 col-md-4 col-lg-3">
    <label for="inputYear">Year</label>
    <input type="number" class="form-control" id="inputYear" name="modelyear" placeholder="Enter year">
  </div>
  <div class="form-group col-sm-6 col-md-4 col-lg-3">
    <label for="brand">Brand</label>
    <select class="form-control" id="inputBrandName" name="brandid">
      {{#each brands}}
      <option value="{{brandid}}">{{brandname}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group col-sm-6 col-md-4 col-lg-3">
    <label for="inputModel">Model</label>
    <input type="text" class="form-control" id="inputModel" name="model"  placeholder="Enter model">
  </div>
  <div class="form-group col-sm-6 col-md-4 col-lg-3">
    <label for="inputPrice">Price</label>
    <input type="number" min="0" step=".01" class="form-control" id="inputPrice" name="price"  placeholder="Enter price">
  </div>

  <div class="form-group col-sm-2 col-md-2 col-lg-2">
    <label for="inputQuantity">Quantity</label>
    <input type="number" step="1" min="1"  class="form-control" id="inputQuantity" name="quantity"  placeholder="Quantity">
  </div>

  <div class="form-group col-sm-6">
    <label for="exampleFormControlTextarea1">Notes</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <div class="form-group col-sm-12"><button id="new_data" type="submit" class="btn btn-primary">Add to Inventory</button></div>
  
</form>

<table>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Price</th>
      <th>Quantity</th>
      
    </tr>
    {{#each products}}
    <tr value="{{productid}}">
      <td>{{modelyear}}</td>
      <td>{{brandname}}</td>
      <td>{{model}}</td>
      <td>{{price}}</td>
      <td>{{quantity}}</td>
      
    </tr>
    {{/each}}
  </table>
