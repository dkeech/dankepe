
<div class="container">
  <h1>Manage Customers</h1>
  <form id="addcustomer" action="/customers" method="post" class="row" >
    <div class="form-group col-sm-6 col-md-4">
      <label for="inputFirstName">First Name</label>
      <input type="text" name="firstname" class="form-control" id="inputFirstName"  placeholder="First Name">

      <label for="inputLastName">Last Name</label>
      <input type="text" name="lastname" class="form-control" id="inputLastName"  placeholder="Last Name">
      <label for="inputStreetAddress">Street Address</label>
      <input type="text" name="street_address" class="form-control" id="inputStreetAddress"  placeholder="Street Address">
      <label for="inputCity">City</label>
      <input type="text" name="city" class="form-control" id="inputCity"  placeholder="City">
      <label for="inputState">State</label>
      <input type="text" name="state" class="form-control" id="inputState"  placeholder="State">
      <label for="inputZip">Zip</label>
      <input type="text" name="zip" class="form-control" id="inputZip"  placeholder="Zip">
      <label for="inputPhone">Phone Number</label>
      <input type="text" name="phone"class="form-control" id="inputPhone"  placeholder="Phone Number">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" name="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email">
        
      </div>
    </div>
    
    
  
    <div class="form-group col-sm-6">
      <label for="exampleFormControlTextarea1">Notes</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-group col-sm-12"><button id="new_data" type="submit" value="Submit" class="btn btn-primary">Add Customer</button></div>
    
  </form>
  <table>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Email</th>
    </tr>
    {{#each customers}}
    <tr value="{{customerid}}">
      <td>{{firstname}} {{lastname}}</td>
      <td>{{street_address}}</td>
      <td>{{city}}</td>
      <td>{{state}}</td>
      <td>{{zip}}</td>
      <td>{{phone}}</td>
      <td>{{email}}</td>
      <td><button class="btn btn-primary" onclick="deleteCustomer({{customerid}})">Delete</button></td>
      <td><a href="/customers/{{customerid}}">Update</a></td>
    </tr>
    {{/each}}
  </table>
  </div>


